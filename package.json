{
  "name": "mokky-buddy-api-runner",
  "displayName": "Mokky Buddy API Runner",
  "description": "Run and manage mock APIs locally easly",
  "version": "1.0.92",
  "publisher": "StapeDev",
  "icon": "resources/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/stapeDev/it.stapedev.vscode.mokkybuddy.git"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "files": [
    "dist",
    "resources/mokkyBuddyAPI.jar",
    "resources/logo.png",
    "resources/icon.svg",
    "vss-extension.json",
    "LICENSE"
  ],
  "activationEvents": [
    "onCommand:mokkyBuddyAPIRunner.toggleServer",
    "onCommand:mokkyBuddyAPIRunner.addAPI",
    "onCommand:mokkyBuddyAPIRunner.deleteAPI",
    "onCommand:mokkyBuddyAPIRunner.previewJson",
    "onCommand:mokkyBuddyAPIRunner.saveAPIConfig",
    "onCommand:mokkyBuddyAPIRunner.loadAPIConfig",
    "onCommand:mokkyBuddyAPIRunner.changePort",
    "onView:mokkyBuddyServerView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mokkyBuddy",
          "title": "Mokky Buddy",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "mokkyBuddy": [
        {
          "id": "mokkyBuddyServerView",
          "name": "Server"
        }
      ]
    },
    "commands": [
      {
        "command": "mokkyBuddyAPIRunner.toggleServer",
        "title": "Start/Stop Mokky Buddy Server"
      },
      {
        "command": "mokkyBuddyAPIRunner.addAPI",
        "title": "Add API"
      },
      {
        "command": "mokkyBuddyAPIRunner.deleteAPI",
        "title": "Delete API"
      },
      {
        "command": "mokkyBuddyAPIRunner.previewJson",
        "title": "Preview JSON"
      },
      {
        "command": "mokkyBuddyAPIRunner.saveAPIConfig",
        "title": "Save API Config"
      },
      {
        "command": "mokkyBuddyAPIRunner.loadAPIConfig",
        "title": "Load API Config"
      },
      {
        "command": "mokkyBuddyAPIRunner.changePort",
        "title": "MokkyBuddy: Set Server Port"
      },
      {
        "command": "mokkyBuddyAPIRunner.selectApiMode",
        "title": "MokkyBuddy: Select API Mode"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "mokkyBuddyAPIRunner.changePort",
          "when": "view == mokkybuddyView && viewItem == server",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Mokky Buddy Settings",
      "properties": {
        "mokkyBuddy.javaPath": {
          "type": "string",
          "default": "java",
          "description": "Full path to the Java executable to use for starting the Mokky Buddy server."
        },
        "mokkyBuddy.serverPort": {
          "type": "number",
          "default": 8081,
          "description": "Port on which the Mokky Buddy server will run"
        },
        "mokkyBuddy.apiMode": {
          "type": "string",
          "enum": [
            "file",
            "database"
          ],
          "default": "file",
          "description": "Select whether Mokky Buddy APIs are stored in local files or accessed via database API."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-prod",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "package-prod": "npm run check-types && npm run lint && node esbuild.js --minify",
    "compile-tests": "tsc -p . --outDir dist",
    "watch-tests": "tsc -p . -w --outDir dist",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "jest --config jest.config.js --runInBand"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.11",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "mocha": "^11.7.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "form-data": "^4.0.4",
    "node-fetch": "^2.7.0"
  }
}
